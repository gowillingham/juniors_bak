<h1>Registrations</h1>

<% if @registrations.any? %>
	<table>
		<thead>
			<tr>
				<th>Player</th>
				<th>Email</th>
				<th>Grade</th>
				<th>School</th>
				<th>Sess</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
	<% @registrations.each do |registration| %>
		<tr>
			<td><%= link_to "#{registration.last_name}, #{registration.first_name}", registration_path(registration) %></td>
			<td><%= registration.email %></td>
			<td><%= registration.grade %></td>
			<td><%= registration.school %></td>
			<td><%= registration.session %></td>
			<td class="actions">
				<%= link_to 'Change' %>
				| <%= link_to 'Remove', registration_path(registration), :confirm => "#{registration.first_name} #{registration.last_name} will be removed. There is no undo. ", :method => :delete %>
		</tr>
	<% end %>
		</tbody>
	</table>
<% else %>
	no registrations
<% end %>